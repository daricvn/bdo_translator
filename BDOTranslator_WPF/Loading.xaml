<Window x:Class="BDOTranslator_WPF.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDOTranslator_WPF"
        mc:Ignorable="d"
        Title="Loading" Height="70" Width="120" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStyle="None">
    <Grid Background="#FF3C3C3C">
        <TextBlock x:Name="lblInfo" HorizontalAlignment="Center" Text="Loading..." TextWrapping="Wrap" VerticalAlignment="Top" Width="100" TextAlignment="Center" Foreground="White" FontSize="14" Margin="0,10,0,0"/>
        <ProgressBar HorizontalAlignment="Center" Height="10" Margin="0,41,0,0" VerticalAlignment="Top" Width="100" IsIndeterminate="True"/>

    </Grid>
</Window>
